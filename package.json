{
  "name": "nostr-effect",
  "version": "0.0.1",
  "description": "A type-safe, composable Nostr library built with Effect",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "prepare": "effect-language-service patch",
    "test": "bun test",
    "typecheck": "tsc --noEmit --incremental",
    "build:check": "bun build src/index.ts --outdir /dev/null --target node 2>&1 | head -100",
    "build": "bun build src/index.ts --outdir dist --target node"
  },
  "keywords": [
    "nostr",
    "effect",
    "typescript",
    "protocol"
  ],
  "license": "MIT",
  "devDependencies": {
    "@effect/language-service": "0.57.0",
    "@types/bun": "1.1.14",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@effect/platform": "0.93.5",
    "@effect/schema": "0.75.5",
    "@noble/curves": "1.8.1",
    "@noble/hashes": "1.7.1",
    "@scure/base": "1.2.4",
    "effect": "3.19.8"
  }
}
