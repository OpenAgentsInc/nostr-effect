{
  "name": "nostr-effect",
  "version": "0.0.1-rc2",
  "description": "A type-safe, composable Nostr library built with Effect",
  "author": "Christopher David <chris@openagents.com>",
  "license": "CC0-1.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenAgentsInc/nostr-effect.git"
  },
  "homepage": "https://github.com/OpenAgentsInc/nostr-effect#readme",
  "bugs": {
    "url": "https://github.com/OpenAgentsInc/nostr-effect/issues"
  },
  "exports": {
    ".": "./src/index.ts",
    "./pure": "./src/wrappers/pure.ts",
    "./pool": "./src/wrappers/pool.ts",
    "./nip19": "./src/wrappers/nip19.ts",
    "./client": "./src/client/index.ts",
    "./services": "./src/services/index.ts",
    "./core": "./src/core/index.ts",
    "./relay": "./src/relay/index.ts"
  },
  "scripts": {
    "prepare": "effect-language-service patch && bun run setup:hooks",
    "setup:hooks": "mkdir -p .git/hooks && cp scripts/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push",
    "test": "bun test",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "verify": "bun run typecheck && bun test",
    "build:check": "bun build src/index.ts --outdir /dev/null --target node 2>&1 | head -100",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:cloudflare": "bun build src/relay/backends/cloudflare/worker.ts --outdir dist/cloudflare --target browser --minify --external @cloudflare/workers-types",
    "deploy:cloudflare": "bun run build:cloudflare && bunx wrangler deploy",
    "dev:cloudflare": "bunx wrangler dev",
    "release": "bun run verify && git tag v$(bun -e \"console.log(require('./package.json').version)\") && git push && git push --tags",
    "publish:npm": "npm publish --provenance --access public"
  },
  "keywords": [
    "nostr",
    "effect",
    "typescript",
    "protocol",
    "cryptography",
    "decentralized",
    "relay",
    "bech32",
    "nip-01",
    "nip-19"
  ],
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241127.0",
    "@effect/language-service": "0.57.0",
    "@types/bun": "1.1.14",
    "typescript": "5.7.2",
    "wrangler": "4.51.0"
  },
  "dependencies": {
    "@effect/platform": "0.93.5",
    "@effect/schema": "0.75.5",
    "@noble/ciphers": "1.2.1",
    "@noble/curves": "1.8.1",
    "@noble/hashes": "1.7.1",
    "@scure/base": "1.2.4",
    "@scure/bip32": "1.6.2",
    "@scure/bip39": "1.5.4",
    "effect": "3.19.8"
  }
}
