{
  "name": "nostr-effect",
  "version": "0.0.1",
  "description": "A type-safe, composable Nostr library built with Effect",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "prepare": "effect-language-service patch && bun run setup:hooks",
    "setup:hooks": "mkdir -p .git/hooks && cp scripts/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push",
    "test": "bun test",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "verify": "bun run typecheck && bun test",
    "build:check": "bun build src/index.ts --outdir /dev/null --target node 2>&1 | head -100",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:cloudflare": "bun build src/relay/backends/cloudflare/worker.ts --outdir dist/cloudflare --target browser --minify --external @cloudflare/workers-types",
    "deploy:cloudflare": "bun run build:cloudflare && bunx wrangler deploy",
    "dev:cloudflare": "bunx wrangler dev"
  },
  "keywords": [
    "nostr",
    "effect",
    "typescript",
    "protocol"
  ],
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241127.0",
    "@effect/language-service": "0.57.0",
    "@types/bun": "1.1.14",
    "typescript": "5.7.2",
    "wrangler": "3.91.0"
  },
  "dependencies": {
    "@effect/platform": "0.93.5",
    "@effect/schema": "0.75.5",
    "@noble/ciphers": "1.2.1",
    "@noble/curves": "1.8.1",
    "@noble/hashes": "1.7.1",
    "@scure/base": "1.2.4",
    "effect": "3.19.8"
  }
}
